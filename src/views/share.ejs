<%- include('./partials/headerPartial', { pageTitle: 'Share' }) %>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-sm-8">
        <div class="card">
          <div class="card-header bg-dark text-white">
            <h4 class="mb-0">File Sharing Form</h4>
          </div>
          <div class="card-body">
            <form action="/s3/share" method="post">
              <div class="form-group">
                <label for="filename">Filename:</label>
                <input type="text" class="form-control" id="filename" name="filename" required>
              </div>
              <div class="form-group">
                <label for="location">Location:</label>
                <input type="text" class="form-control" id="location" name="location" required>
              </div>
              <div class="form-group">
                <label for="email">Enter Email of User to Share with:</label>
                <input type="text" class="form-control" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label>Access:</label>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="readonly" name="access" value="ReadOnly" required>
                  <label class="form-check-label" for="readonly">Read-only</label>
                </div>
                <div class="form-check">
                  <input type="radio" class="form-check-input" id="writeaccess" name="access" value="WriteAccess" required>
                  <label class="form-check-label" for="writeaccess">Write Access</label>
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('./partials/footerPartial') %>


